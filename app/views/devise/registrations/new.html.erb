<div class="section is-medium">
  <div class="container is-fluid">
    <div class="box">
      <div class="columns is-mobile is-centered">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
        <div class="column is-half is-offset-one-fifth">
          <div class="is-size-1 has-text-centered">Sign up</div>
            <div class="field">
              <div class="control">
                <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "username", class: 'input' },
                  label_html: { class: 'label' },
                  wrapper: false %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'input' },
                  label_html: { class: 'label' },
                  wrapper: false %>
              </div>
            </div>
          <div class="field">
            <div class="control">
              <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: 'input' },
                label_html: { class: 'label'},
                wrapper: false
              %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", class: 'input'},
                label_html: { class: 'label'},
                wrapper: false
              %>
            </div>
          </div>
            <div class="field">
              <div class="control">
                <%= f.button :submit, "Sign up", class: 'button is-info is-fullwidth' %>
                <div class="has-text-centered"><%= render "devise/shared/links" %></div>
              </div>
            </div>
          </div>
        <% end %>
        </div>
    </div>
  </div>
</div>
