<div class="section">
  <div class="container is-fluid">
    <div class="columns is-centered">
      <div class="column is-8">
      <div class="is-size-1 has-text-centered">Login</div>
        <div class="box">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <div class="control">
              <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'input' },
                label_html: { class: 'label' },
                wrapper: false %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: 'input' },
                label_html: { class: 'label' },
                wrapper: false %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :remember_me,
                label_html: { class: 'p-2'}, 
                as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.button :submit, "Log in", class: 'button is-primary' %>
            </div>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>




